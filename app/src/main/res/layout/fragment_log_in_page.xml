<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#47275F"
    tools:context=".Fragments.LogInFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/etMailLogIn"
            android:layout_width="210dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="40dp"
            android:backgroundTint="#555555"
            android:ems="10"
            android:hint="Enter your email..."
            android:inputType="textEmailAddress"
            android:textColorHint="#919191"
            app:layout_constraintBottom_toTopOf="@+id/etPassLogIn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView11" />

        <TextView
            android:id="@+id/txtSignUpLogIn"
            android:layout_width="227dp"
            android:layout_height="36dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:clickable="true"
            android:text="Don't have an account? Sign up here!"
            android:textAlignment="center"
            android:textColor="#919191"
            app:layout_constraintBottom_toTopOf="@+id/logInToRPTxt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnLogIn" />

        <TextView
            android:id="@+id/logInToRPTxt"
            android:layout_width="169dp"
            android:layout_height="30dp"
            android:layout_marginBottom="15dp"
            android:clickable="true"
            android:text="Forgot your password?"
            android:textAlignment="center"
            android:textColor="#919191"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnLogIn"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:layout_gravity="bottom|center"
            android:layout_marginTop="420dp"
            android:backgroundTint="#BCBBBB"
            android:onClick="logIn"
            android:text="Log in"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etPassLogIn"
            android:layout_width="210dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginBottom="230dp"
            android:backgroundTint="#555555"
            android:ems="10"
            android:hint="Enter your password..."
            android:inputType="textPassword"
            android:textColorHint="#919191"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="450dp"
            android:layout_height="300dp"
            android:layout_marginBottom="430dp"
            android:src="@android:drawable/screen_background_dark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#4E2D67" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="430dp"
            android:backgroundTint="#BD2D2D"
            android:foregroundTint="#ED1919"
            android:src="@drawable/eye_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#BCBBBB" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>